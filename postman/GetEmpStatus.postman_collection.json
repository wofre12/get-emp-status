  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Healthz (200)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{API_TOKEN}}", "type": "string" }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/healthz",
              "host": ["{{baseUrl}}"],
              "path": ["healthz"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"status 200\", () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.test(\"ok flag true\", () => json && json.ok === true);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
