          "name": "Happy Path (NAT1001)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{API_TOKEN}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\"NationalNumber\":\"NAT1001\"}" },
            "url": {
              "raw": "{{baseUrl}}/api/GetEmpStatus",
              "host": ["{{baseUrl}}"],
              "path": ["api", "GetEmpStatus"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"status 200\", () => pm.response.code === 200);",
                  "const j = pm.response.json();",
                  "pm.test(\"NationalNumber match\", () => j.NationalNumber === 'NAT1001');",
                  "pm.test(\"Highest present\", () => typeof j.HighestSalary === 'number');",
                  "pm.test(\"Average present\", () => typeof j.AverageSalary === 'number');",
                  "pm.test(\"Status valid\", () => ['GREEN','ORANGE','RED'].includes(j.Status));",
                  "pm.test(\"IsActive is boolean\", () => typeof j.IsActive === 'boolean');",
                  "pm.test(\"LastUpdated Z\", () => typeof j.LastUpdated === 'string' && j.LastUpdated.endsWith('Z'));"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
